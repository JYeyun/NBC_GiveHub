<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_background">
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_signInToGiveHub"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="110dp"
        app:layout_constraintStart_toStartOf="@id/tv_signInToGiveHub"
        app:layout_constraintEnd_toEndOf="@+id/tv_signInToGiveHub"
        app:srcCompat="@drawable/give_hub" />
    <TextView
        android:id="@+id/tv_signInToGiveHub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/loginTitle"
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_id"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo" />
    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/id"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_signInToGiveHub"
        app:layout_constraintStart_toStartOf="@id/et_id"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/et_id"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:background="@drawable/et_corner"
        android:ems="10"
        android:textColor="@color/black"
        android:hint="@string/idHint"
        android:textSize="13sp"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_signInToGiveHub" />
    <TextView
        android:id="@+id/tv_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pw"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/tv_id"
        app:layout_constraintTop_toBottomOf="@+id/et_id" />

    <EditText
        android:id="@+id/et_pw"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:textColor="@color/black"
        android:background="@drawable/et_corner"
        android:ems="10"
        android:textSize="13sp"
        android:hint="@string/pwHint"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/tv_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_pw" />

    <android.widget.Button
        android:id="@+id/btn_signIn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/buttoncustom"
        android:backgroundTint="@color/main_green"
        android:text="@string/signInBt"
        android:textSize="13sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/et_id"
        app:layout_constraintTop_toBottomOf="@id/et_pw" />

    <android.widget.Button
        android:id="@+id/btn_creatAccount"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttoncustom"
        android:backgroundTint="@color/main_gray"
        android:text="@string/signUpBt"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="@id/et_id"
        app:layout_constraintTop_toBottomOf="@id/et_pw" />

</androidx.constraintlayout.widget.ConstraintLayout>