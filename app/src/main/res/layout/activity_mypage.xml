<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_background">
    <ImageButton
        android:id="@+id/mypage_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="15dp"
        android:background="@color/main_background"/>

    <ImageView
        android:id="@+id/mypage_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toRightOf="@+id/mypage_arrow"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/give_hub"
        android:layout_marginTop = "20dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/mypage_img"
        app:layout_constraintTop_toTopOf="@+id/mypage_img"
        app:layout_constraintBottom_toBottomOf="@+id/mypage_img"
        android:textSize="20sp"
        android:text="@string/myPage"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/mypage_edit"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="edit"
        android:backgroundTint="@color/main_gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:visibility="visible"/>
    <Button
        android:id="@+id/mypage_complete"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="complete"
        android:backgroundTint="@color/main_gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mypage_profile_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:civ_border_overlay="true"
        android:src="@drawable/give_hub"
        app:civ_border_color="@color/main_stroke"
        app:civ_border_width="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypage_img"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="35dp"/>

    <TextView
        android:id="@+id/mypage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/mypage_profile_img"
        app:layout_constraintRight_toRightOf="@+id/mypage_profile_img"
        app:layout_constraintTop_toBottomOf="@+id/mypage_profile_img"
        android:text="@string/name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp" />
    <TextView
        android:id="@+id/mypage_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/mypage_profile_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mypage_profile_img"
        android:text="Android / kotlin"
        android:textSize="15sp"
        android:visibility="visible"/>
    <EditText
        android:id="@+id/mypage_edit_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/mypage_profile_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="language"
        android:textSize="15sp"
        android:layout_marginTop="110dp"
        android:inputType="textVisiblePassword"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/mypage_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/mypage_profile_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_language"
        android:text="ENTP"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:visibility="visible"/>
    <EditText
        android:id="@+id/mypage_edit_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/mypage_profile_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_language"
        android:hint="mbti"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:inputType="textVisiblePassword"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/mypage_git"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/mypage_profile_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_mbti"
        android:text="git.com"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:visibility="visible"/>
    <EditText
        android:id="@+id/mypage_edit_git"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/mypage_profile_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_mbti"
        android:hint="git address"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:inputType="textVisiblePassword"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/mypage_blog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/mypage_profile_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_git"
        android:text="tistory.com"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:visibility="visible"/>
    <EditText
        android:id="@+id/mypage_edit_blog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/mypage_profile_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_git"
        android:hint="blog address"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:inputType="textVisiblePassword"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/mypage_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/main_gray"
        android:layout_marginTop="20dp"/>
    <ListView
        android:id="@+id/mypage_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:dividerHeight="0px"
        android:divider="@color/main_background"
        app:layout_constraintTop_toBottomOf="@+id/mypage_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>