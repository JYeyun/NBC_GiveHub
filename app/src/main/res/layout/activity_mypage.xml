<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_new_background">

    <ImageButton
        android:id="@+id/mypage_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:background="@color/main_new_background"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mypage_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/give_hub"
        app:layout_constraintBottom_toBottomOf="@+id/mypage_arrow"
        app:layout_constraintLeft_toRightOf="@+id/mypage_arrow"
        app:layout_constraintTop_toTopOf="@id/mypage_arrow" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/myPage"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/mypage_img"
        app:layout_constraintLeft_toRightOf="@+id/mypage_img"
        app:layout_constraintTop_toTopOf="@+id/mypage_img" />

    <Button
        android:id="@+id/mypage_edit"
        android:layout_width="110dp"
        android:layout_height="40sp"
        android:background="#00ff0000"
        android:text="edit"
        android:textColor="#318E46"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/mypage_arrow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/mypage_arrow" />

    <Button
        android:id="@+id/mypage_complete"
        android:layout_width="130dp"
        android:layout_height="40sp"
        android:layout_marginRight="10dp"
        android:background="#00ff0000"
        android:text="complete"
        android:textColor="@color/main_green"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/mypage_arrow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/mypage_arrow" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mypage_profile_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="85sp"
        android:src="@drawable/give_hub"
        app:civ_border_color="@color/main_stroke"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mypage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/mypage_profile_img"
        app:layout_constraintRight_toRightOf="@+id/mypage_profile_img"
        app:layout_constraintTop_toBottomOf="@+id/mypage_profile_img" />

    <TextView
        android:id="@+id/mypage_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:fontFamily="@font/nanumsquareb"
        android:maxWidth="170dp"
        android:text="Android / kotlin"
        android:textSize="13sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/mypage_name"
        app:layout_constraintStart_toStartOf="@+id/mypage_name"
        app:layout_constraintTop_toBottomOf="@+id/mypage_name" />

    <EditText
        android:id="@+id/mypage_edit_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquareb"
        android:hint="language"
        android:layout_marginTop="7dp"
        android:inputType="textVisiblePassword"
        android:maxWidth="200dp"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/mypage_language"
        app:layout_constraintLeft_toLeftOf="@+id/mypage_name"
        app:layout_constraintRight_toRightOf="@+id/mypage_name"
        app:layout_constraintTop_toBottomOf="@+id/mypage_name" />

    <TextView
        android:id="@+id/mypage_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nanumsquareb"
        android:maxWidth="170dp"
        android:text="ENTP"
        android:textSize="13sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/mypage_language"
        app:layout_constraintStart_toStartOf="@+id/mypage_language"
        app:layout_constraintTop_toBottomOf="@+id/mypage_language" />

    <EditText
        android:id="@+id/mypage_edit_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/nanumsquareb"
        android:hint="mbti"
        android:inputType="textVisiblePassword"
        android:maxWidth="200dp"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/mypage_mbti"
        app:layout_constraintLeft_toLeftOf="@+id/mypage_language"
        app:layout_constraintRight_toRightOf="@+id/mypage_language"
        app:layout_constraintTop_toBottomOf="@+id/mypage_language" />

    <TextView
        android:id="@+id/mypage_git"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/nanumsquareb"
        android:maxWidth="200dp"
        android:text="git.com"
        android:textSize="13sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/mypage_mbti"
        app:layout_constraintStart_toStartOf="@+id/mypage_mbti"
        app:layout_constraintTop_toBottomOf="@+id/mypage_mbti" />

    <EditText
        android:id="@+id/mypage_edit_git"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/nanumsquareb"
        android:hint="git address"
        android:inputType="textVisiblePassword"
        android:maxWidth="200dp"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/mypage_git"
        app:layout_constraintLeft_toLeftOf="@+id/mypage_mbti"
        app:layout_constraintRight_toRightOf="@+id/mypage_mbti"
        app:layout_constraintTop_toBottomOf="@+id/mypage_mbti" />

    <TextView
        android:id="@+id/mypage_blog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/nanumsquareb"
        android:maxWidth="170dp"
        android:text="tistory.com"
        android:textSize="13sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/mypage_git"
        app:layout_constraintStart_toStartOf="@+id/mypage_git"
        app:layout_constraintTop_toBottomOf="@+id/mypage_git" />

    <EditText
        android:id="@+id/mypage_edit_blog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/nanumsquareb"
        android:hint="blog address"
        android:inputType="textVisiblePassword"
        android:maxWidth="200dp"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/mypage_blog"
        app:layout_constraintLeft_toLeftOf="@+id/mypage_git"
        app:layout_constraintRight_toRightOf="@+id/mypage_git"
        app:layout_constraintTop_toBottomOf="@+id/mypage_git" />

    <View
        android:id="@+id/mypage_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="#D4D5D4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_blog" />

    <ListView
        android:id="@+id/mypage_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:divider="@color/main_background"
        android:dividerHeight="0px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_line" />

</androidx.constraintlayout.widget.ConstraintLayout>